{% extends "base.html.jinja" %}

{% block head %}
    <link rel="stylesheet" href="{{ url_for('static', filename='error.css') }}" />
{% endblock head %}

{% block content %}
    <div id="whole_screen">
        <div id="error_message">
            <h1>Error {{ status_code }}</h1>
            <p>{{ message if message }}</p>
            {%- if traceback -%}
                <details id="traceback">
                    <summary>Traceback</summary>
                    <div class="scrollable_text">
                        <p id="traceback_text">{{ traceback }}</p>
                    </div>
                </details>
            {%- endif -%}
        </div>
    </div>
{% endblock content %}
